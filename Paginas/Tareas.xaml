                                    Margin="0 10 0 0 ">
                                <Label Margin="25 0 0 0 " FontWeight="SemiBold" FontSize="11">Fecha Limite:</Label>
                                <DatePicker Name="datepickerTarea" Margin="30 0 0 0 " FontSize="10" Foreground="DimGray" Width="150"
        HorizontalAlignment="Left">
                                </DatePicker>
                            </StackPanel>
                            <StackPanel HorizontalAlignment="Left" Orientation="Vertical"
                                    Margin="0 10 0 0 ">
                                <Label Margin="25 0 0 0 " FontWeight="SemiBold" FontSize="11">Destinatario</Label>
                                <ComboBox x:Name="Destinatario" Margin="30 0 0 0 " FontSize="10" Foreground="DimGray"
                  HorizontalAlignment="Left" Width="150">

                                </ComboBox>
                            </StackPanel>
                            <StackPanel HorizontalAlignment="Left" Orientation="Vertical"
                                    Margin="0 10 0 0 ">
                                <Label Margin="25 0 0 0 " FontWeight="SemiBold" FontSize="11">Prioridad</Label>
                                <ComboBox Name="Prioridad" Margin="30 0 0 0 " FontSize="10" Foreground="DimGray"
       HorizontalAlignment="Left" Width="150">
                                    <ComboBoxItem>Alta</ComboBoxItem>
                                    <ComboBoxItem>Baja</ComboBoxItem>
                                    <ComboBoxItem>Media</ComboBoxItem>
                                </ComboBox>
                            </StackPanel>
                            <StackPanel HorizontalAlignment="Left" Orientation="Vertical"
                                    Margin="0 10 0 0 ">
                                <Label Margin="25 0 0 0 " FontWeight="SemiBold" FontSize="11">Descripcion de la tarea:</Label>
                                <TextBox x:Name="Descripcion" Margin="30 0 0 0 " TextWrapping="Wrap" FontSize="10" Foreground="DimGray"
     HorizontalAlignment="Left" Width="675">
                                </TextBox>
                            </StackPanel>

                        </StackPanel>
