                                <Button  x:Name="AddDocumento" Margin="30 0 0 0" HorizontalAlignment="Right" Height="30" Width="150"
    Style="{StaticResource gridEditButton}" Click="AddDocumento_Click" Cursor="Hand">
                                    <StackPanel Orientation="Horizontal">
                                        <!--<iconPacks:PackIconMaterial Kind="AccountPlus" Height="20" Width="20"
                               Style="{StaticResource gridButtonIcon}" />
   -->
                                        <TextBlock Padding="7 0 0 0 " FontWeight="SemiBold"> Subir del sistema</TextBlock>
                                    </StackPanel>
                                </Button>
                                <Button x:Name="ScannaDocumento" Margin="30 0 0 0" HorizontalAlignment="Right" Height="30" Width="150"
   Style="{StaticResource gridEditButton}" Click="ScannaDocumento_Click" Cursor="Hand">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Padding="7 0 0 0 " FontWeight="SemiBold"> Escanear y Subir</TextBlock>
                                    </StackPanel>
                                </Button>
                                <Button x:Name="CrearTarea" Margin="740 0 0 0" HorizontalAlignment="Right" Height="30" Width="150"
   Style="{StaticResource gridEditButton}" Click="CrearTarea_Click" Cursor="Hand">
                                    <StackPanel Orientation="Horizontal">
                                        <!--
   <iconPacks:PackIconMaterial Kind="AccountPlus" Height="20" Width="20"
                               Style="{StaticResource gridButtonIcon}" />
   -->
                                        <TextBlock Padding="7 0 0 0 " FontWeight="SemiBold">Crear Nueva Tarea</TextBlock>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </StackPanel>
