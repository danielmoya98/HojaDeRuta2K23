<Window x:Class="HojadeRuta2K23.Windows.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:HojadeRuta2K23.Windows"
        mc:Ignorable="d"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Login" Height="550" Width="300"
        AllowsTransparency="True"  WindowStyle="None" Background="Transparent" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Estilos/EditarPerfil.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Border Background="#21254A" CornerRadius="25">
        <Grid Background="Transparent">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="100"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" VerticalAlignment="Top" Height="130" CornerRadius="25 25 0 0" Width="300" >
               <Border.Background>
               Black
                   <!--
                   <ImageBrush ImageSource="C:\Users\Alienware\RiderProjects\HojadeRuta2K23\Imagenes\Vector 4.png" ></ImageBrush>
               -->
               </Border.Background>
                
                <!--<Path Data="M128.947 55.0602C88.8158 61.3692 46.329 74.7813 0 69.9724V0H400V96.9289C356.103 122.482 347.368 139.371 261.842 103.238C176.316 67.1046 169.079 48.7512 128.947 55.0602Z" >
                    <Path.Fill>
                        <SolidColorBrush Color="#7D3BCA" />
                    </Path.Fill>
                </Path>-->

            </Border>
            
            <StackPanel Grid.Row="1" HorizontalAlignment="Left" Orientation="Vertical">
                <Label Foreground="White" Margin="30 0 0 0" FontSize="30" FontWeight="SemiBold"  >Hello , There</Label>
                <Label Foreground="White" Margin="30 0 0 0" FontSize="30" FontWeight="SemiBold"  >Welcome back</Label>
            </StackPanel>
            
            <StackPanel Grid.Row="2" HorizontalAlignment="Left" Orientation="Vertical"  Margin="0 35 0 0 ">
                <TextBox BorderBrush="#696E8E" Foreground="#696E8E" FontWeight="Thin" Margin="35 0 0 0 " Width="225" Height="25"> Email </TextBox>
                <TextBox BorderBrush="#696E8E" Foreground="#696E8E" FontWeight="Thin" Margin="35 30 0 0 " Width="225" Height="25">Contraseña</TextBox>
            </StackPanel>
            
            <StackPanel Grid.Row="3" HorizontalAlignment="Center" Orientation="Horizontal" Margin="0 25 0 0">
                <Label FontWeight="Thin" >
                    <TextBlock>
                        <Hyperlink Foreground="#696E8E" NavigateUri="https://www.ejemplo.com">
                            <Run Foreground="#696E8E" Text="Olvidaste tu contraseña?" />
                        </Hyperlink>
                    </TextBlock>
                </Label>
            </StackPanel>
            <StackPanel Grid.Row="4" HorizontalAlignment="Center" Orientation="Vertical" Margin="0 15 0 0">
                <Button Margin="0 15 0 0 " Height="30" Width="100" BorderBrush="Transparent"
                        Style="{StaticResource gridEditButton}" Background="#733CCB">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock  FontWeight="SemiBold"> Iniciar Sesion </TextBlock>
                    </StackPanel>
                </Button>
                <Label FontWeight="Thin" Margin="0 25 0 0 " >
                    <TextBlock>
                        <Run Foreground="#696E8E">¿Eres nuevo aqui? ,</Run>
                        <Hyperlink Foreground="#696E8E" NavigateUri="https://www.ejemplo.com">
                            <Run Foreground="#696E8E" Text="Create una cuenta gratis." />
                        </Hyperlink>
                    </TextBlock>
                </Label>
            </StackPanel>
        </Grid>
    </Border>
</Window>