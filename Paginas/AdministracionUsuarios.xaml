<Page x:Class="HojadeRuta2K23.Paginas.AdministracionUsuarios"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:HojadeRuta2K23.Paginas"
      xmlns:uc="clr-namespace:HojadeRuta2K23.UserControls"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      mc:Ignorable="d"
      Title="AdministracionUsuarios" Height="Auto" Width="1280">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Estilos/EditarPerfil.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>


    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="100"> </RowDefinition>
            <RowDefinition Height="*"> </RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Margin="0 10 0 0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="400"></ColumnDefinition>
                    <ColumnDefinition Width="440"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Center">
                    <Label Margin="5 0 0 0 " FontWeight="SemiBold" FontSize="20">Administracion Usuarios</Label>
                    <Label Margin="5 0 0 0" Foreground="Gray">Lorem Ipsum ...</Label>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0 0 15 0">
                     <TextBox   Margin="5 0 5 0 " Background="Transparent"  Height="25" Width="150"></TextBox>
                    <iconPacks:PackIconMaterial Kind="AccountSearch" Height="20" Width="20" Style="{StaticResource gridButtonIcon}" Margin="0 0 15 0 " />
                    <ComboBox   Margin="5 0 15 0" Width="150" Height="25">
                        <ComboBoxItem Content="Vista Cuadriculada" />
                        <ComboBoxItem Content="Vista Lista" />
                    </ComboBox>

                </StackPanel>
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Right">
                    
                    <ComboBox   Margin="5 0 100 0" Width="150" Height="25">
                        <ComboBoxItem Content="Mas Recientes" />
                        <ComboBoxItem Content="Mas Antiguos" />
                    </ComboBox>
                    <Button   Margin="0 0 35 0" HorizontalAlignment="Right" Height="30" Width="150" Style="{StaticResource gridEditButton}">
                        <StackPanel  Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="AccountPlus" Height="20" Width="20" Style="{StaticResource gridButtonIcon}" />
                            <TextBlock Padding="7 0 0 0 " FontWeight="SemiBold"> Crear Usuario </TextBlock>
                        </StackPanel>
                    </Button>
                    
                </StackPanel>
            </Grid>
        </StackPanel>
        
        <StackPanel Grid.Row="1" Height="Auto">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
            <WrapPanel Grid.Row="1" Grid.Column="0"   Height="Auto"  HorizontalAlignment="Left">
                <uc:CardAdministracionUsuario Height="200" Width="170" Margin="3"></uc:CardAdministracionUsuario>
                <uc:CardAdministracionUsuario Height="200" Width="170" Margin="3"></uc:CardAdministracionUsuario>
                <uc:CardAdministracionUsuario Height="200" Width="170" Margin="3"></uc:CardAdministracionUsuario>
