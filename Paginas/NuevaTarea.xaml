                                   <TextBlock Padding="7 0 0 0 " FontWeight="SemiBold">Registrar Tramite</TextBlock>
                               </StackPanel>
                           </Button>
                       </StackPanel>
                        
                       
                    </StackPanel>
                </StackPanel>
            </Grid>
