                                    <DataGridTextColumn Foreground="Black" Header="#" IsReadOnly="True"
                  CanUserResize="False" Width="auto"
                  Binding="{Binding Id}" />
                                    <DataGridTemplateColumn Header="Codigo" IsReadOnly="True" Width="auto">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Border Height="50" Width="50" CornerRadius="15">
                                                        <Border.Background>
                                                            <ImageBrush ImageSource="{Binding Foto}"></ImageBrush>
                                                        </Border.Background>
                                                    </Border>
                                                    <StackPanel VerticalAlignment="Center" Orientation="Vertical">
                                                        <TextBlock VerticalAlignment="Center" Margin="7 0 0 0"
                             Text="{Binding CodigoTarea}">
                                                        </TextBlock>
                                                    </StackPanel>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="Destinatario" Binding="{Binding DestinatarioId}"
                  IsReadOnly="True" Width="1*" />
                                    <DataGridTemplateColumn Header="Estado" IsReadOnly="True" Width="1*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                                    <Button Style="{StaticResource gridEditButton}" Content="{Binding EstadoTarea}">
                                                    </Button>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="Prioridad" Binding="{Binding Prioridad}"
                  IsReadOnly="True" Width="*" />
                                    <DataGridTextColumn Header="Fecha Asignacion" Binding="{Binding FechaAsignacion}"
                  IsReadOnly="True" Width="*" />


                                    <DataGridTextColumn Header="Accion" Binding="{Binding Accion}" IsReadOnly="True" Width="1*"/>
                                    <DataGridTextColumn Header="Fecha Limite" Binding="{Binding FechaLimite}" IsReadOnly="True" Width="1*"/>
                                    <!--    <DataGridTextColumn Header="Fecha Finalizacion" Binding="{Binding FechaFinalizacion}" IsReadOnly="True" Width="1*"/>   Para Futuros Usos-->

                                    <DataGridTemplateColumn Header="Operations" IsReadOnly="True" Width="auto">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Button Name="propiedades" Margin="5 0 0 0" Style="{StaticResource gridEditButton}" Click="propiedades_Click"
              Tag="{Binding Id}">
                                                        <iconPacks:PackIconMaterial Kind="ViewDashboard" />
                                                    </Button>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>

